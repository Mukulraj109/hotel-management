NODE_ENV=development
PORT=4000

# Database
MONGO_URI=mongodb://admin:password@localhost:27017/hotel_dev?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_PRIVATE_KEY_PATH=./keys/jwtRS256.key
JWT_PUBLIC_KEY_PATH=./keys/jwtRS256.key.pub

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Booking.com OTA
BOOKINGCOM_CLIENT_ID=xxx
BOOKINGCOM_CLIENT_SECRET=xxx
BOOKINGCOM_API_BASE=https://api.booking.com

# Redis
REDIS_URL=redis://localhost:6379

# Google Cloud
GOOGLE_PROJECT_ID=your-gcp-project
GOOGLE_CLOUD_RUN_SERVICE=hotel-backend

# Security
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password